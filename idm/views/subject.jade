extends layout

block content
  h2 Update subject information
  form(action="/patient", method="POST")
    p   SSSID:
    p
        input.form-control(name="sssid", type="text", placeholder="1234...", value='#{patient.sssid}')
    p   eMail:
    p
        input.form-control(name="email", type="text", placeholder="johndoe@...", value='#{patient.email}')
    p
        input.form-control(name="idef", type="text", value="#{patient.id}", style="visibility:hidden;")
    p
        button(type="submit") Update
        button(onclick="move();return false;") Cancel

    if !(typeof errMessage === 'undefined')
        p.errormsg= errMessage

  script.
        function move() {
          window.location.href = '/patients'
        }